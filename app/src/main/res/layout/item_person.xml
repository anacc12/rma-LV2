<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/imgWidth"
        android:layout_height="@dimen/imgHeight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_person"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/spacingDefault"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/spacingDefault"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img"
        android:layout_marginStart="@dimen/spacingDefault"
        android:layout_marginBottom="@dimen/spacingDefault"
        android:textSize="@dimen/textSizeLarge"
        android:text="@string/app_name"/>
    <TextView
        android:id="@+id/born"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginStart="@dimen/spacingDefault"
        android:textSize="@dimen/textSizeNormal"
        android:text="@string/app_name"/>
    <TextView
        android:id="@+id/line"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/born"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginStart="@dimen/spacingDefault"
        android:textSize="@dimen/textSizeNormal"
        android:text="@string/line"/>
    <TextView
        android:id="@+id/passed"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginStart="@dimen/spacingDefault"
        android:textSize="@dimen/textSizeNormal"
        android:text="@string/app_name"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/born"
        android:layout_marginStart="@dimen/spacingDefault"
        android:layout_marginEnd="20dp"
        android:textSize="@dimen/textSizeNormal"
        android:text="@string/app_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>